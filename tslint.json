{
	"extends": "tslint:recommended",
	"rules": {
		"import-spacing": false,
		"indent": [true, "tabs", 4],
		"quotemark": [true, "single", "jsx-double"],
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				}
			}
		],
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "no-angle-bracket-type-assertion": true
	}
}
